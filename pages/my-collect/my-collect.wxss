/* 当前页面的公共样式 */
.select-icon {
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  border: 4rpx #eee solid;
  border-radius: 50%;
  color: #fff;
  /* 点击进行 背景色的切换,显示当前选中与否 */
  background-color: #fff;
}


/* 顶部的收藏列表 */
.collect-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
}

/* 点击进行 背景色的切换,显示当前选中与否 */
