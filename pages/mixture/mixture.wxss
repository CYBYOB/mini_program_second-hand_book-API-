/* pages/mixture/mixture.wxss */

/* 活动、礼包 图文列表的公共样式 */
.list {
  margin: 30rpx;
}
.list > .item {
  margin: 30rpx 0;
  border: 3rpx solid #eee;
}
.list .pictrue {
  width: 100%;
  height: 300rpx;
}


/* 顶部的礼包与活动 */
.activity-pack-switch {
  display: flex;
  text-align: center;
  align-items: center;
}
.activity-pack-switch .activity,.pack {
  flex: 1;
  padding: 30rpx;
}
/* 活动、礼包的选中状态 */
.selected {
  color: #ff9500;
}

/* 筛选的图标 */
.filter{
  position: fixed;
  top: 145rpx;
  right: 59rpx;
  width: 120rpx;
  height: 120rpx;
  text-align: center;
  background-color: #ff9500;
}
.filter .filter-icon {
  width: 50rpx;
  height: 50rpx;
  padding-top: 10rpx;
}

/* 过滤器框 */
.filter-frame {
  position: fixed;
  width: 600rpx;
  height: 100%;
  top: 115rpx;
  right: 0;
  background-color: #eee;
}
.filter-item .range {
  display: flex;
  flex-wrap: wrap;
}
.range .range-item {
  padding: 10rpx 20rpx;
  margin: 20rpx;
  border: 3rpx solid #999;
  border-radius: 20rpx;
}
/* 单个item选中后的样式 */
.range .item-selected {
  background-color: #ff9500;
}


/* 过滤器框底部的 重置 和 确定按钮 */
.reset-confirm {
  display: flex;
  margin-top: 50rpx;
  border-radius: 20rpx;
}
.reset-confirm .reset,.confirm {
  background-color: #ff9500;
}